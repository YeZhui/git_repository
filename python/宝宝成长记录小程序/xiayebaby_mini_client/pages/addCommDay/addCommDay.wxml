<view class="page">
    <view class="page__hd">
        <view class="page__title">添加纪念日</view>
    </view>
    <view class="page__bd">
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">日期</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="date" value="{{date}}" start="1970-07-01" end="2099-12-31" bindchange="bindDateChange">
                        <view class="weui-input">{{date}}</view>
                    </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_select">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">纪念日</view>
                </view>
                <view class="weui-cell__bd">
                    <picker bindchange="bindCommDayChange" value="{{commDaysIndex}}" range="{{commDays}}">
                        <view class="weui-select weui-select_in-select-after">{{commDays[commDaysIndex]}}</view>
                    </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">或者输入自定义纪念日名称</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" bindblur="bindCommName" placeholder="请输入自定义纪念日"/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input weui-cell_vcode">
                <view class="weui-cell__hd">
                    <view class="weui-label">验证码</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="请输入验证码" />
                </view>
                <view class="weui-cell__ft">
                    <image class="weui-vcode-img" src="../../image/vcode.jpg" style="width: 108px"></image>
                </view>
            </view>
        </view>
    </view>
    <view class="page__bd page__bd_spacing">
        <button class="weui-btn" type="default" bindtap="addCommDay">确定</button>
    </view>
</view>
